* http://davidwalsh.name/stylus-rem
*/

set-font-size(value) {
  font-size: value; /* add PX as backup */

  if (value is inherit) {
    /* do nothing, "inherit" has no unit */
  } else {
    font-size: remify(value);
  }
}

remify(value) { /* separate mixin, so it can be used elsewhere */
  u = unit(value);

  if u is 'px' {
    return unit(value/16, 'rem');
  } else {
    return unit(value, u);
  }
}

screen-reader-only()
  position: absolute
  top: 0
  left: -1000px
  width: 1px
  height: 1px
  overflow: hidden
